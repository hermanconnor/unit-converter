<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>
      {{#if title}}
        {{title}}
      {{else}}
        Unit Converter
      {{/if}}
    </title>
    <link rel='stylesheet' href='/css/styles.css' />

  </head>
  <body class='bg-gray-100 text-gray-800 min-h-screen flex flex-col'>

    <!-- Header -->
    <header class='bg-blue-600 text-white py-6 shadow-md'>
      <div class='container mx-auto px-4 text-center'>
        <h1 class='text-3xl font-bold'>Unit Converter</h1>
        <p class='text-lg mt-1'>Convert Temperature, Length, and Weight Easily</p>
      </div>
    </header>

    <!-- Navbar -->
    <nav class='flex justify-center mt-4'>
      <ul class='flex items-center space-x-4 text-blue-600'>
        <li>
          {{#isActive currentPage 'home'}}
            <a href='/' class='text-blue-500 font-bold'>Home</a>
          {{else}}
            <a href='/' class='text-gray-700 hover:text-blue-500'>Home</a>
          {{/isActive}}
        </li>
        <li>
          {{#isActive currentPage 'temperature'}}
            <a
              href='/temperature'
              class='text-blue-500 font-bold'
            >Temperature</a>
          {{else}}
            <a
              href='/temperature'
              class='text-gray-700 hover:text-blue-500'
            >Temperature</a>
          {{/isActive}}
        </li>
        <li>
          {{#isActive currentPage 'length'}}
            <a href='/length' class='text-blue-500 font-bold'>Length</a>
          {{else}}
            <a
              href='/length'
              class='text-gray-700 hover:text-blue-500'
            >Length</a>
          {{/isActive}}
        </li>
        <li>
          {{#isActive currentPage 'weight'}}
            <a href='/weight' class='text-blue-500 font-bold'>Weight</a>
          {{else}}
            <a
              href='/weight'
              class='text-gray-700 hover:text-blue-500'
            >Weight</a>
          {{/isActive}}
        </li>
      </ul>
    </nav>

    <!-- Main Content -->
    <main class='flex-grow container mx-auto px-4 py-12'>
      {{{body}}}
    </main>

    <!-- Footer -->
    <footer class='bg-gray-800 text-white text-center py-4'>
      <p class='text-sm'>&copy;
        {{year}}
        Unit Converter App.</p>
    </footer>

  </body>
</html>