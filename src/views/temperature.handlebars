<h1 class='text-3xl font-bold text-center mb-6 text-blue-600'>Temperature
  Converter</h1>

<div class='max-w-3xl mx-auto'>
  <form method='POST' action='/temperature' class='space-y-6'>
    <div>
      <label for='value' class='block text-sm font-medium mb-1'>Temperature
        Value</label>
      <input
        type='number'
        step='any'
        name='value'
        id='value'
        required
        class='w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500'
      />
    </div>

    <div class='grid grid-cols-1 sm:grid-cols-2 gap-4'>
      <div>
        <label
          for='fromUnit'
          class='block text-sm font-medium mb-1'
        >From</label>
        <select
          name='fromUnit'
          id='fromUnit'
          required
          class='w-full border border-gray-300 rounded px-3 py-2 bg-white focus:outline-none focus:ring-2 focus:ring-blue-500'
        >
          <option value='celsius'>Celsius (째C)</option>
          <option value='fahrenheit'>Fahrenheit (째F)</option>
          <option value='kelvin'>Kelvin (K)</option>
        </select>
      </div>

      <div>
        <label for='toUnit' class='block text-sm font-medium mb-1'>To</label>
        <select
          name='toUnit'
          id='toUnit'
          required
          class='w-full border border-gray-300 rounded px-3 py-2 bg-white focus:outline-none focus:ring-2 focus:ring-blue-500'
        >
          <option value='celsius'>Celsius (째C)</option>
          <option value='fahrenheit'>Fahrenheit (째F)</option>
          <option value='kelvin'>Kelvin (K)</option>
        </select>
      </div>
    </div>

    <div class='text-center'>
      <button
        type='submit'
        class='mt-4 px-6 py-2 bg-blue-600 text-white font-semibold rounded hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 cursor-pointer'
      >
        Convert
      </button>
    </div>
  </form>

  {{#if error}}
    <div class='mt-4 p-3 rounded bg-red-100 text-red-700'>
      {{error}}
    </div>
  {{/if}}

  {{#if result}}
    <h3 class='text-2xl mt-4 mb-2'>Result of your calculation:</h3>
    <div class='p-3 rounded bg-green-100 text-xl text-green-700'>
      {{this.value}}{{fromAbbr}}
      =
      {{result}}{{toAbbr}}.
    </div>
  {{/if}}
</div>